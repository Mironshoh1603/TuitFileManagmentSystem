extends base 
block content   
    .container-fluid.pt-4.px-4
        .row.g-4
            .col-12
                .h-100.bg-light.rounded.p-4
                    form.row#userData(action='')
                        h3.text-secondary Sizning ma&apos;lumotlaringiz
                        .form-group.col-sm-12.col-md-6.col-xl-6.mb-3
                            label.form-label(for='') Name
                            input#name_user.form-control(type='text' value=`${admin.name}`)
                        .form-group.col-sm-12.col-md-6.col-xl-6.mb-3
                            label.form-label(for='') Username
                            input#username_user.form-control(type='text' value=`${admin.username}`)
                        .form-group.col-sm-12.col-md-6.col-xl-6.mb-3
                            label.form-label(for='') Email
                            input#email_user.form-control(type='email' value=`${admin.email}`)
